# Configurações do Wi-Fi para Cliente
CONFIG_ESP32_WIFI_SW_COEXIST_ENABLE=y
CONFIG_ESP32_WIFI_STATIC_RX_BUFFER_NUM=10
CONFIG_ESP32_WIFI_DYNAMIC_RX_BUFFER_NUM=32
CONFIG_ESP32_WIFI_DYNAMIC_TX_BUFFER_NUM=32
CONFIG_ESP32_WIFI_TX_BUFFER_TYPE=1
CONFIG_ESP32_WIFI_CACHE_TX_BUFFER_NUM=32

# Configurações de log
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_DEFAULT_LEVEL=3

# Configurações de rede
CONFIG_LWIP_IPV6=y
CONFIG_LWIP_NETIF_LOOPBACK=y

# Habilitar ping
CONFIG_LWIP_IPV4=y
CONFIG_LWIP_ICMP=y

# Configurações do sistema
CONFIG_ESP_SYSTEM_EVENT_QUEUE_SIZE=32
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=2304

# Configurações específicas para cliente
CONFIG_ESP32_WIFI_CONNECT_TIMEOUT=30
CONFIG_ESP32_WIFI_SCAN_AUTH_MODE_THRESHOLD=1

# Desabilitar componentes desnecessários se ping não funcionar
# CONFIG_LWIP_ESP_PING_SOCK_ENABLE=n
